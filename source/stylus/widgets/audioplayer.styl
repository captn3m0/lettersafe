.audioplayer
	audio
		display none
	.player-inner
		background-color theme_widget_color
		border 1px theme_border_color solid
		box-shadow 0px 2px 5px 0px rgba(#000, 0.1)
		clearfix()
	.controls, .seekbar, .volume-controls
		position relative
		z-index 110
		display block
	.controls
		float left
		ul
			margin 0
			li
				color #ddd
				padding 10px 15px
				border-right 1px theme_border_color solid
	.volume-controls
		display block
		float right
				
	.seekbar
		display inline
		z-index 100
		box-sizing border-box
		width 100%
		input[type='range']
			appearance(none)
			background-color theme_border_color
			height 1px
			margin-top 20px
		input[type='range']::-webkit-slider-thumb
			appearance(none)
			background-color rgba(color_base, 20%)
			border-radius 24px
			height 20px
			width 20px
			margin-top 0px