.btn.btn-icon
	background none
	border none
	text-decoration none
	color #fff
	&:hover, &:active
		background none
		border none
		text-decoration none
	span.text
		margin-left 5px

// Glossy Buttons
.btn-glossy
	position relative
	border-radius 1px
	&:after	
		absolute top left
		right 0
		width 100%
		height 1px
		background-color rgba(#fff, 0.8)
		content ''