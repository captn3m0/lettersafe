	box-sizing border-box

// Always define a box with a column element after row element
	

.boxes
	.box-header, .box-body, .box-footer
		padding 4px 15px


.boxes
	.box-header
		width 100%
		height 40px
		box-sizing border-box
		//border-bottom 1px #eee dashed
		position relative
		margin-bottom 10px
		padding-right 5px
		&:after	
			position absolute
			top 5px
			left -1px
			width 6px
			height 30px
			background-color color_base
			content ''
		.title
			margin 5px 15px 0 0
			color color_base 
			width auto
			display inline-block

.box-header
	.box-options
		list-style none
		margin 0
		li
			margin-top 2px
			cursor pointer
			span.icon
				color #aaa
				font-size 20px
			&:hover
				span.icon
					color color_base
.box
	padding-left 15px