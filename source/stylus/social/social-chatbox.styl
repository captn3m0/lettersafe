ul.chatbox.media-list
	margin 0
	padding 20px
	border 1px theme_widget_header solid
	box-shadow 0px 5px 10px 0px rgba(#000, 0.07)
	border-radius 1px
	li.media
		margin 0 0 20px 0
		color #444
		a
			float left
			margin-right 30px
			background-color #fff
			.media-object
				padding 8px 
				border 1px theme_widget_header solid
				box-shadow -4px 0px 6px 0px rgba(#000, 0.1)
				width 64px
				height 64px

		.media-body
			margin-top 8px
			border 1px theme_widget_header solid
			text-align left
			margin-right 94px
			padding 7px 10px
			p.text
				font-weight normal
				font-family baseFontLight
				font-size 16px
		&:nth-child(2n)
			a
				float right
				margin-left 30px
				margin-right 0
				box-shadow 4px 0px 6px 0px rgba(#000, 0.1)
			.media-body
				margin-left 94px
				margin-right 0
				text-align right