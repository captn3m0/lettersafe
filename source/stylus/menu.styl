.app-menu
	fixed top left
	bottom 0
	overflow-x hidden
	overflow-y auto
	width 250px
	color #fff
	transition transform .3s ease-in-out
	background-color color_base
	color theme_font_color_light
	z-index 100
	box-shadow 0px 0px 100px 20px rgba(#000, 0.4)

	.menu-header
		height 50px
		width 100%
		box-sizing border-box
		border-bottom 1px rgba(#000, 0.05) solid
		.do-hideMenu
			display inline-block
			width auto
			cursor pointer
			padding 10px 10px 8px 10px
			i
				padding 9px
				opacity 0.8
				width auto
				font-size 14px
				color #fff
			&:hover
				background-color rgba(#000, 0.1)
			&:active
				background-color rgba(#000, 0.1)
				box-shadow inset 0px 2px 5px 0px rgba(#000, 0.1)
		span.menu-title
			margin-left 5px
			font-family baseFontLight 
			font-size 22px
			color #fff
			text-shadow 0px 1px 1px rgba(#000, 0.1)



.app-menu[data-visibility='visible'] 
	transform translate3d(0,0,0) rotateY(0deg)
	& + .app-main
		transform scale(0.8) translate3d(157px, 0, 0)
.app-menu[data-visibility='hidden']
	transform translate3d(-250px, 0, 0) rotateY(-45deg)
	& + .app-main
		transform scale(1) translate3d(0, 0, 0)
	

.app-menu
	ul.menu-items-list
		li
			.menu-item
				user-select none
				cursor pointer
				border-top 1px transparent solid
				border-bottom 1px transparent solid
				padding 8px 15px 5px 15px
				position relative
				z-index 111
				transition all .1s ease-in-out
				span.icon
					font-size 18px
					margin-right 15px
					position relative
					z-index 112
				span.text
					user-select none
					font-family baseFontLight
					font-size 24px
				&:hover
					border-top-color darken(color_base, 10%)
					border-bottom-color darken(color_base, 10%)
					background-color lighten(color_base, 10%)
				&:active
					border-top-color darken(color_base, 13%)
					border-bottom-color darken(color_base, 13%)
					background-color darken(color_base, 3%)
					box-shadow inset 0px 2px 12px 0px rgba(#000, 0.1)
				&:after
					absolute top left
					top -1px
					width 6px
					height 49px
					content ''
					z-index 110
					transition all .2s ease-in
			.menu-item.active
				&:after
					background-color rgba(#fff, 0.9)


			&:first-child
				.menu-item
					border-top none
