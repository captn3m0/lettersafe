.row.row-padded
	form.form(role='form', method='post', action='/send')
		.form-group
			label(for='to') To: 
			input.form-control#to(type='text', name='to', placeholder="Reciepient's Email")
		.form-group
			label(for='subject') Subject:  
			input.form-control#subject(type='text', name='subject', placeholder="Subject")
		br
		.form-group
			textarea.form-control#text(name='text', placeholder='Enter your message here')
		br
		br
		.form-group
			button.btn.btn-info.do-sendmail(type='submit') Send
